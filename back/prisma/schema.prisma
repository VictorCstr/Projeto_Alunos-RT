// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Teacher {
  id       String @id
  name     String
  password String
  email    String @unique

  @@map("teacher")
}

model Student {
  id       String     @id
  name     String
  school   School
  activity Activity[]

  @@map("student")
}

model Activity {
  id        String  @id
  school    School
  name      String
  grade     Int
  studentId String
  Student   Student @relation(fields: [studentId], references: [id])

  @@map("activity")
}

enum School {
  Dados
  Tecnologia
  Produto
}
